@model Zenturiq.Models.EditarPerfilViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Editar Perfil</h1>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
    else if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(u => u.IDUsuario)
        <div class="form-group">
            @Html.LabelFor(u => u.Nombre)
            @Html.TextBoxFor(u => u.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Nombre, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.Apellido)
            @Html.TextBoxFor(u => u.Apellido, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Apellido, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.CorreoElectronico)
            @Html.TextBoxFor(u => u.CorreoElectronico, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.Telefono)
            @Html.TextBoxFor(u => u.Telefono, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Telefono, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    }
</div>
