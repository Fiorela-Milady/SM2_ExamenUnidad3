@model Zenturiq.Models.Usuario
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container mt-5">
        <h2>Registrarse</h2>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <div class="form-group">
            @Html.LabelFor(u => u.Nombre)
            @Html.TextBoxFor(u => u.Nombre, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.Apellido)
            @Html.TextBoxFor(u => u.Apellido, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.CorreoElectronico)
            @Html.TextBoxFor(u => u.CorreoElectronico, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.Contraseña)
            @Html.PasswordFor(u => u.Contraseña, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.Telefono)
            @Html.TextBoxFor(u => u.Telefono, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Registrarse</button>
        <a href="@Url.Action("Index", "Login")" class="btn btn-secondary">Cancelar</a>
    </div>
}
