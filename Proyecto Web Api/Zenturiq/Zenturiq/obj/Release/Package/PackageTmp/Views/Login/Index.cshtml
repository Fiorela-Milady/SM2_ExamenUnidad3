@model Zenturiq.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container mt-5">
    <h2>Iniciar Sesión</h2>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(u => u.CorreoElectronico)
            @Html.TextBoxFor(u => u.CorreoElectronico, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.CorreoElectronico, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.Contraseña)
            @Html.PasswordFor(u => u.Contraseña, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Contraseña, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-primary">Ingresar</button>
        <a href="@Url.Action("RecuperarCuenta", "Login")" class="btn btn-link">Recuperar cuenta</a>
        <a href="@Url.Action("Registrarse", "Login")" class="btn btn-link">Registrarse</a>
    }
</div>
